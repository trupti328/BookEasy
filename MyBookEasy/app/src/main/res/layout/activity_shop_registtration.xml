<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Upload Shop Image -->
        <ImageView
            android:id="@+id/shopImageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/baseline_add_photo_alternate_24"
            android:background="@android:color/darker_gray"
            android:contentDescription="Shop Image" />

        <Button
            android:id="@+id/btnUploadImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Upload Shop Image" />

        <!-- Shop Name -->
        <EditText
            android:id="@+id/shopNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shop Name"
            android:inputType="text" />

        <!-- Shop Address -->
        <EditText
            android:id="@+id/shopAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Shop Address"
            android:inputType="textPostalAddress" />

        <!-- Contact Number -->
        <EditText
            android:id="@+id/shopContactEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Contact Number"
            android:inputType="phone" />

        <!-- Select Services Button -->
        <Button
            android:id="@+id/selectServicesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Services" />

        <!-- Selected Services List -->
        <TextView
            android:id="@+id/selectedServicesTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selected Services: None"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@android:color/darker_gray" />

        <!-- Register Button -->
        <Button
            android:id="@+id/registerShopButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Register Shop"
            android:backgroundTint="@color/medium_gray"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"/>

    </LinearLayout>
</ScrollView>